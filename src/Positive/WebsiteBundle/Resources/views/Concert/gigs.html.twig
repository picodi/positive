{% extends "PositiveWebsiteBundle::layout.html.twig" %}

{% block scripts %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/positivewebsite/css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/positivewebsite/css/gigs.css') }}">

    <script src="{{ asset('bundles/positivewebsite/js/gigs.js')}}"></script>
{% endblock %}
{% block content %}

    <div id="products-post">
        <div class="container">
            {% if future|length %}
            <div class="row">
                <div class="col-md-12">
                    <div id="product-heading">
                        <h1 class="section-title">Come See Us Live</h1>
                        <img src="images/under-heading.png" alt="" >
                    </div>
                </div>
            </div>
            <div class="row" id="Container">
                {% for concert in future %}
                    {% if future|length < 3 %}
                        <div class="col-md-6 col-sm-6 mix portfolio-item">
                    {% else %}
                        <div class="col-md-3 col-sm-6 mix portfolio-item">
                     {% endif %}
                            <div class="portfolio-wrapper">
                                <div class="portfolio-thumb">
                                    <img src="{{ asset('bundles/positivewebsite/images/concert/' ~ concert.image)}}" alt="" />
                                    <div class="hover">
                                        <div class="hover-iner">
                                            <a class="fancybox" href="{{ path('event', {'slug': concert.slug}) }}"><img src="{{ asset('bundles/positivewebsite/images/skin/open-icon.png')}}" alt="" /></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="label-text">
                                    <h3><a href="{{ path('event', {'slug': concert.slug}) }}">{{ concert.name }}</a></h3>
                                    <span class="text-category">{{ concert.location }}</span>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            </div>
            {% endif %}
            <div class="row">
                <div class="col-md-12">
                    <div id="product-heading">
                        <h1 class="section-title">Past Concerts</h1>
                        <img src="images/under-heading.png" alt="" >
                    </div>
                </div>
            </div>
            <div class="row" id="Container">
                {% for concert in past %}
                <div class="col-md-3 col-sm-6 mix portfolio-item">
                    <div class="portfolio-wrapper">
                        <div class="portfolio-thumb">
                            <img src="{{ asset('bundles/positivewebsite/images/concert/' ~ concert.image)}}" alt="" />
                            <div class="hover">
                                <div class="hover-iner">
                                    <a class="fancybox" href="{{ path('event', {'slug': concert.slug}) }}"><img src="{{ asset('bundles/positivewebsite/images/skin/open-icon.png')}}" alt="" /></a>
                                </div>
                            </div>
                        </div>
                        <div class="label-text">
                            <h3><a href="{{ path('event', {'slug': concert.slug}) }}">{{ concert.name }}</a></h3>
                            <span class="text-category">{{ concert.location }}</span>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}